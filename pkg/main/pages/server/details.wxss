.detailsItem {
    margin-top: 20rpx;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 2px 7px 0 #fff;
}

.title {
    line-height: 80rpx;
    font-weight: 500;
    font-size: 32rpx;
}

.itemShow {
    padding-top: 15rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,.65);
}

.price {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 24rpx;
    color: #5a5a5a;
}

.price text {
    margin: 5rpx 0;
}

.know,.list {
    font-size: 24rpx;
    color: rgba(0,0,0,.65);
    margin-bottom: 20rpx;
}

.list {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.listItem {
    height: 150rpx;
}

.listItem image {
    width: 70rpx;
    margin-bottom: 10rpx;
    color: #000;
    font-size: 28rpx;
    font-weight: 500;
}

.des {
    width: 65%;
    color: #999;
    font-size: 26rpx;
    font-weight: 400;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.allCenter {
    width: 33%;
}