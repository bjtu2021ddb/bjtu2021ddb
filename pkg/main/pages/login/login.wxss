page {
    background-color: #fff;
}

.loginContainer image {
    width: 400rpx;
    margin-top: 80rpx;
    margin-bottom: 50rpx;
}

.button {
    width: 500rpx!important;
    border: 1rpx solid #bbb;
    background: #fff;
    border-radius: 50rpx;
    height: 90rpx!important;
}

.button text {
    margin-left: 10rpx;
    font-size: 28rpx;
    font-weight: 400;
}

.rule {
    margin-top: 50rpx;
    width: 500rpx;
    color: #307dfd;
}

.span {
    color: #353535;
}

.pickview {
    width: 100%;
    height: 750rpx;
}

.counterybview {
    background-color: #fff;
    z-index: 999;
    position: fixed;
    bottom: 0;
    width: 100%;
}

.title {
    width: 100%;
    height: 80rpx;
    z-index: 9999;
    border-top: 1rpx solid #f0f0f2;
    border-bottom: 1rpx solid#f0f0f2;
}

.pickitem,.title {
    display: flex;
    align-items: center;
    justify-content: center;
}

.pickitem {
    line-height: 50rpx;
}

.wrapper {
    width: 90%;
    margin-left: 5%;
    background-color: #fff;
    margin-top: 180rpx;
    border-radius: 20rpx;
}

.bangtitle {
    font-size: 34rpx;
    margin-bottom: 10rpx;
    justify-content: space-between;
}

.bangtitle,.page-section {
    width: 90%;
    margin-left: 5%;
    height: 90rpx;
    align-items: center;
    display: flex;
}

.page-section {
    margin-bottom: 25rpx;
    position: relative;
}

.page-section input {
    width: 100%;
    height: 100%;
    border-bottom: 1rpx solid #bbb;
}

.sumitbtn {
    width: 90%!important;
    background-image: linear-gradient(90deg,#e94e3a,#f85d1b);
    margin: 30rpx 0;
    color: #fff;
}

.tops {
    width: 90%;
    margin-left: 5%;
    height: 50rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
}

.icone {
    right: 10rpx;
    z-index: 999;
}

.group,.icone {
    position: absolute;
}

.group {
    top: 49%;
    width: 100%;
}

.mini-btn {
    width: 200rpx!important;
    color: #409eff!important;
    font-size: 24rpx;
    border: 1rpx solid #409eff!important;
    font-weight: 400!important;
    padding: 8rpx!important;
}

.checkradio {
    width: 550rpx;
    padding-bottom: 0;
    position: relative;
}

.checkradio image {
    width: 100%;
}

.label-2 {
    width: 80%;
    margin-bottom: 30rpx;
    margin-left: 10%;
}

.shurbtn {
    border: 1rpx solid #409eff;
    color: #409eff;
    border-radius: 25rpx;
}

.shurbtn text {
    padding: 15rpx 30rpx;
}