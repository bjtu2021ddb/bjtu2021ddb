.section {
    width: 100%;
    background-color: #fff;
}

.section textarea {
    width: 100%;
    border: 1rpx solid #e2e2e2;
    min-height: 200rpx;
    border-radius: 10rpx;
    padding-left: 10rpx;
    padding-top: 10rpx;
}

.coantaine {
    width: 94%;
    margin-left: 3%;
    padding: 20rpx 0;
}

.btn {
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    background-image: linear-gradient(90deg,#e94e3a,#f85d1b);
    color: #fff;
}

.spaceBetween {
    height: 100rpx;
    display: flex;
    align-items: center;
}