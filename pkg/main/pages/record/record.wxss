.recordItem {
    width: 100%;
    height: 160rpx;
    background-color: #fff;
    position: fixed;
    top: 0;
}

.postview {
    position: absolute;
    top: 70rpx;
    width: 100%;
}

.recordcontent {
    width: 75%;
    margin-left: 15%;
    height: 100%;
}

.bigfont {
    font-size: 50rpx;
    color: #101010;
}

.samllfont {
    font-size: 24rpx;
    color: #8c8c8c;
}

.price {
    color: #ec704a;
}

.listContent {
    margin-top: 180rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.listItem {
    width: 100%;
    height: 140rpx;
}

.listVioew {
    height: 100%;
}

.userimg image {
    width: 96rpx;
    border-radius: 50%;
}

.username {
    margin-left: 20rpx;
    font-size: 28rpx;
    height: 96rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.time {
    color: #9e9e9e;
    font-size: 24rpx;
}

.stautse {
    color: #bbb;
    border: 1rpx solid #bbb;
}

.stats,.stautse {
    font-size: 24rpx;
    padding: 5rpx 10rpx;
}

.stats {
    color: #fc5056;
    border: 1rpx solid #fc5056;
}