    top: 0;
}

.icon {
    margin-left: 40rpx;
}

input {
    font-size: 28rpx;
    width: 75%;
    padding-left: 20rpx;
}

.packageList {
    background-color: #fff;
    color: #101010;
    font-size: 28rpx;
