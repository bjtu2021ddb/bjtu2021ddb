    height: 100%;
}

.coaomde {
    padding-right: 50rpx;
}

.operation {
    width: 100%;
    height: 100rpx;
    justify-content: flex-end;
}

.opearbutton,.operation {
    display: flex;
    align-items: center;
}

.opearbutton {
    justify-content: center;
    height: 60%;
    width: 150rpx;
    border: 2rpx solid #888;
    border-radius: 50rpx;
    margin-left: 20rpx;
}

.titleIMg image {
