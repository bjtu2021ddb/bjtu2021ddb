}

.deliverTitle {
    height: 50rpx;
    padding: 10rpx 0;
}

.delivery {
    height: 80%;
    padding: 0 10rpx;
    background-image: linear-gradient(90deg,#e94e3a,#f85d1b);
    color: #fff;
    border-radius: 6rpx;
    margin-left: 10rpx;
    font-size: 22rpx;
}

.palet {
    height: 40rpx;
    margin: 0 10rpx;
