<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/container"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="#333"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="101" />

    <TextView
        android:id="@+id/tvStationName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="#333"
        app:layout_constraintLeft_toRightOf="@id/tvNum"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="车站名称" />

    <TextView
        android:id="@+id/tvKeyType"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="#333"
        app:layout_constraintLeft_toRightOf="@id/tvStationName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="关键点类型" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tvNum"
        app:layout_constraintTop_toBottomOf="@+id/tvStationName"
        tools:text="车站的名断舍离" />

    <TextView
        android:id="@+id/tvTrackNum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textColor="#333"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tvNum"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="车站的名断舍离" />
    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textColor="#333"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tvNum"
        app:layout_constraintTop_toBottomOf="@+id/tvTrackNum"
        tools:text="车站的名断舍离" />

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="详情>>"
        android:textColor="#333"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ddd"/>

</androidx.constraintlayout.widget.ConstraintLayout>